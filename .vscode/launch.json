  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch main()",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "buildFlags": "-tags=debug",
      "args": [
      ],
      "env": {
        "MYSQL_USER": "root",
        "MYSQL_DATABASE": "dbkit_test"
      },
    },
    {
      "name": "Test_Now",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "buildFlags": "-tags=debug",
      "args": [
        "-test.run",
        "Test_Now",
      ],
      "env": {
        "TEST_DB_CONNECTION_STRING": "sqlite://:memory:",
      },
    },
  ]
}